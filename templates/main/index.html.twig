{% extends 'base.html.twig' %}
    

{% block header %} {{ include ('header.html.twig') }} {% endblock %}
{% block title %}Hello MainController!{% endblock %}

{% block body %}
<div class="container">
    <div id="carouselExampleControls" class="carousel carousel-fade slide w-25" data-bs-ride="carousel">

        <div class="carousel-inner">

            {% if eventos %}
                {% set contador = 1 %}

                {% for evento in eventos %}

                    {% if contador == 1 %}
                        <div class="carousel-item active">
                            <img src="imgs/event/{{evento.image}}" class="d-block img-fluid w-100" alt="...">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img src="imgs/event/{{evento.image}}" class="d-block img-fluid w-100" alt="...">
                        </div>
                    {% endif %}
                    {% set contador = contador+1 %}
                {% endfor %}
            {% endif %}


        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    
    </div>

    
</div>

{% endblock %}
                    </svg></p>

            </div>
        {% if comentarios %}
            <ul class="list-group list-group-flush">
        {% for comentario in comentarios %}
                <li class="list-group-item"><span class="text-muted"><img class="rounded-circle" height="20" width="20" src="/imgs/user/{{comentario.user.image}}"/>{{comentario.user.name}}.</span>  {{comentario.description}}</li>
                
            
        {% endfor %}
            </ul>
            <div class="card-body bg-light">
                <p class="text-primary" style="--bs-text-opacity: .5;">Evento organizado por <span class="text-uppercase fw-bold text-primary">{{evento.user.name}}</span></p>
            </div>
        {% endif %}
            
        </div>
        {# MODAL #}
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Tu comentario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {{ form_start(form) }} {{ form_widget(form) }} {{ form_end(form) }}
                    </div>
                    <div class="modal-footer">
                        
                    </div>
                </div>
            </div>
        </div>
        {# MODAL #}

        {% endfor %}

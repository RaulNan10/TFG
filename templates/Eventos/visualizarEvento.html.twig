    <div class="container">
        
        {% if eventos %}
        {% for evento in eventos %}
        <div class="card border border-dark" style="width: 25rem;">
            <img src="/imgs/event/{{evento.image}}" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-title fw-bold fs-2 text-uppercase">{{evento.title}}</p>
                <hr class="border border-primary mt-0">
                <p class="card-text lh-lg fs-5 mt-0">{{evento.description}}</p>
            </div>
            <div class="card-footer border border-top">
                <p class="fs-4 text">Valoraciones
                    <svg type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"
                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />

    <link href="{{ asset('css/verEventos.css') }}" rel="stylesheet" type="text/css" />
   {{ include ('header.html.twig', {}) }}
<div class="container">
    {% if eventos %}
    <div class="row">
        {% for evento in eventos %}
        <div  class="col-4 mt-5">
            <div class="card border border-dark border-3" style="height:600">
                <img src="imgs/event/{{evento.image}}" class="card-img-top img-fluid" alt="...">
                <div class="card-header text-danger fw-bold">{{evento.user.name}}</div>
                <div class="card-body">
                    <h3 class="card-title fw-bold">{{evento.title}}</h3>
                    <h6 class="card-subtitle mb-2 text-danger"><svg xmlns="http://www.w3.org/2000/svg" width="16"
                            height="16" fill="currentColor" class="bi bi-calendar" viewBox="0 0 16 16">
                            <path
                                d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                        </svg><span class="ms-2">{{ evento.date|date('d-m-Y') }}</span></h6>
                    <p class="card-text">{{evento.description}}</p>
                    <a href="{{ path('app_visualizarEvento', {id:evento.id}) }}" class="btn btn-danger">Leer m√°s</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
